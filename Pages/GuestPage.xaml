<Page x:Class="StudentProgress.Pages.GuestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentProgress.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GuestPage">

    <Grid Background="#333333">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Foreground="White" Content="Здравствуйте дорогой наш пользователь" Style="{StaticResource Lab}" FontSize="40" HorizontalAlignment="Center"/>
            <TextBlock Foreground="White" HorizontalAlignment="Center" FontSize="30" FontFamily="Times new roman" TextWrapping="Wrap" Text="Мы рады приветствовать вас на нашем замечательном ресурсе! Это приложение созданно, для студентов и преподавателей чтобы упростить учет ведомости. Поступайте в наш техникум и вы будете счастливым пользователем этой системы."/>
        </StackPanel>
        <Image Grid.Row="1" Source="/Resources/StudentPhoto.jpg" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Grid>
</Page>
