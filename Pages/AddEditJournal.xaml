<Page x:Class="StudentProgress.Pages.AddEditJournal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentProgress.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditJournal">

    <Grid Background="White">
        <StackPanel>
            <WrapPanel Margin="5">
                <Label Content="Предмет: " Style="{StaticResource Lab}"/>
                <ComboBox Width="160" x:Name="cmbSubject" SelectedItem="{Binding Subject}" DisplayMemberPath="SubjectName"/>
            </WrapPanel>
            <WrapPanel Margin="5">
                <Label Content="Курс учащегося: " Style="{StaticResource Lab}"/>
                <TextBox Text="{Binding Group.Course}" x:Name="CourseBox" Style="{StaticResource TxB}"/>
            </WrapPanel>
            <WrapPanel Margin="5">
                <Label Content="ФИО студента: " Style="{StaticResource Lab}"/>
                <TextBox Text="{Binding Student.Name}" x:Name="FioStudent" Style="{StaticResource TxB}"/>
            </WrapPanel>
            <WrapPanel Margin="5">
                <Label Content="Дата выставления оценки " Style="{StaticResource Lab}"/>
                <TextBox Text="{Binding Date}" x:Name="DateBox" Width="190" Height="30"/>
            </WrapPanel>
            <WrapPanel Margin="5">
                <Label Content="Оценка учащегося: " Style="{StaticResource Lab}"/>
                <TextBox Text="{Binding Grade}" x:Name="GradeBox" Style="{StaticResource TxB}"/>
            </WrapPanel>
            <Button x:Name="Save" Content="Сохранить" VerticalAlignment="Bottom" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Page>
